daemon off;
# Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections <%= ENV['NGINX_WORKER_CONNECTIONS'] || 1024 %>;
}

http {
	gzip on;
	gzip_comp_level 2;
	gzip_min_length 512;
	gzip_proxied any; # Heroku router sends Via header

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id forwarded_for=$http_x_forwarded_for user_agent=$http_user_agent';
	access_log '/var/log/nginx/access.log' l2met;
	error_log '/var/log/nginx/error.log';

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	# Must read the body in 5 seconds.
	client_body_timeout 5;

	limit_req_zone $binary_remote_addr zone=mylimit:10m rate=10r/s;
	server {
		listen <%= ENV["PORT"] %>;
		server_name _;
		keepalive_timeout 5;


		location / {
			limit_req zone=mylimit;

			limit_except GET OPTION {
				deny  all;
			}
        
			if ($http_x_forwarded_proto != "https") {
				return 301 https://$host$request_uri;
			}
			
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
			proxy_pass http://localhost:3000; #next serve listens here and receives nginx requests
		}
	}
}