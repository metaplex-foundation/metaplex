{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["ES2021"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "include": ["setup/src/**/*", "common/**/*", "cypress/**/*"]
}
